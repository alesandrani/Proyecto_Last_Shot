<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddJugadores">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#D2F7EC"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contenedor de imÃ¡genes -->
            <LinearLayout
                android:id="@+id/contenedorImagenes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/imagenPrincipal"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <!-- Contenedor de opciones -->
            <LinearLayout
                android:id="@+id/contenedorOpciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/s000000sw1cr23bffe135"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:elevation="4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/opcion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s000000sw1cr8be44092"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/contenedorInterno1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/barraAmarilla1"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="#FFE135"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:id="@+id/barraAmarilla2"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="#FFE135" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/opcion2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s000000sw1cr8be44193"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <ImageView
                        android:id="@+id/iconoOpcion2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitCenter" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

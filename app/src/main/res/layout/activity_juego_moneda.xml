<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2F7EC">

    <!-- Barra superior con botones -->
    <LinearLayout
        android:id="@+id/barraSuperior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="16dp">

    </LinearLayout>

    <!-- Lista de jugadores -->
    <LinearLayout
        android:id="@+id/listaJugadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraSuperior">

    </LinearLayout>

    <!-- Imagen del mechero (aleatorio) -->

    <!-- SecciÃ³n de la moneda -->

    <ImageView
        android:id="@+id/imgMechero"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="4dp"
        android:src="@mipmap/mchero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158" />

    <LinearLayout
        android:id="@+id/monedaSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listaJugadores">

    </LinearLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/pink"
        android:contentDescription="Jugador 4"
        android:text="Jugador 4"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="354dp" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/pink"
        android:contentDescription="Jugador 3"
        android:text="Jugador 3"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="284dp" />

    <ImageView
        android:id="@+id/imgMonedaCruz"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/img_coin_cruz"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="529dp" />

    <ImageView
        android:id="@+id/imgMonedaCara"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/coin_cara"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="529dp" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/pink"
        android:contentDescription="Jugador 2"
        android:text="Jugador 2"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="203dp" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/pink"
        android:contentDescription="Jugador 1"
        android:text="Jugador 1"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="426dp" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="70dp"
        android:layout_height="66dp"
        android:src="@mipmap/button_back"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/btnChat"
        android:layout_width="65dp"
        android:layout_height="63dp"
        android:src="@mipmap/button_chat"
        tools:layout_editor_absoluteX="347dp"
        tools:layout_editor_absoluteY="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

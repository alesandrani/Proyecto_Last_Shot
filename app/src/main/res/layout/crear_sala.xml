<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D2F7EC"
    android:padding="20dp">

    <!-- Botón de retroceso -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="56dp"
        android:layout_height="51dp"
        android:layout_margin="16dp"
        android:contentDescription="Volver"
        android:onClick="onBackPressed"
        android:src="@mipmap/button_back" />

    <!-- Logo centrado -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="122dp"
        android:layout_height="103dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:contentDescription="Logo de Last Shot"
        android:src="@mipmap/image_logo_app" />

    <!-- Título "Crear Sala" -->
    <TextView
        android:id="@+id/text_unirse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CREAR SALA"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <!-- Código de Sala -->
    <EditText
        android:id="@+id/input_codigo_sala"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:hint="Código de sala"
        android:background="@drawable/rounded_input"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textColorHint="#808080"/>

    <!-- Nombre de la Sala -->
    <EditText
        android:id="@+id/nombreSala"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:hint="Nombre de sala"
        android:background="@drawable/rounded_input"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textColorHint="#808080"/>

    <!-- Nombre del Jugador -->
    <EditText
        android:id="@+id/input_nombre_jugador"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:hint="Tu nombre"
        android:background="@drawable/rounded_input"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textColorHint="#808080"/>

    <!-- Botón Crear Sala con Texto Dentro -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/btn_crearSala"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/yellow"
            android:contentDescription="Botón Crear Sala"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="CREAR SALA"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

</LinearLayout>

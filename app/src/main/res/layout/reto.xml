<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2F7EC">

    <!-- Botón de retroceso en la esquina superior izquierda -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="53dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:contentDescription="Botón de retroceso"
        android:src="@mipmap/button_back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- TextView para mostrar la pregunta -->

    <!-- TextView para el temporizador -->
    <TextView
        android:id="@+id/preguntaReto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/jersey_10"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="84dp"
        android:layout_height="89dp"
        android:layout_below="@id/preguntaReto"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="164dp"
        android:layout_marginTop="347dp"
        android:layout_marginEnd="162dp"
        android:fontFamily="@font/jersey_10"
        android:text="30"
        android:textColor="@color/black"
        android:textSize="100sp" />
</RelativeLayout>

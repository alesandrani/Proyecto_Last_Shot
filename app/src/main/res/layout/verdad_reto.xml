<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_fondo_vdd_reto">

    <!-- Bot贸n de retroceso en la esquina superior izquierda -->

    <!-- Bot贸n RETO -->

    <!-- Bot贸n VERDAD -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="53dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:contentDescription="Bot贸n de retroceso"
        android:src="@mipmap/button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/btn_reto"
        android:layout_width="304dp"
        android:layout_height="68dp"
        android:layout_marginTop="208dp"
        android:background="@drawable/bg_btn_reto_selector"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jersey_10"
            android:text="RETO"
            android:textColor="#E2C077"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_verdad"
        android:layout_width="310dp"
        android:layout_height="73dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/bg_btn_reto_selector"
        android:gravity="center"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_reto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERDAD"
            android:fontFamily="@font/jersey_10"
            android:textColor="#E2C077"
            android:textSize="34sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/turno"
        android:layout_width="356dp"
        android:layout_height="99dp"
        android:layout_marginTop="400dp"
        android:background="#B3FFFFFF"
        android:fontFamily="@font/jersey_10"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

</androidx.constraintlayout.widget.ConstraintLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111735"
    tools:context=".ActivityJuegoMoneda">


    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="64dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/button_back"
        android:contentDescription="Volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />



    <ImageView
        android:id="@+id/imgMonedaCara"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"

        android:src="@drawable/coin_cara"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="487dp" />

    <LinearLayout
        android:id="@+id/monedaSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgMonedaCara"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </LinearLayout>

    <ImageView
        android:id="@+id/imgSlot"
        android:layout_width="334dp"
        android:layout_height="367dp"
        android:scaleType="fitCenter"
        android:src="@drawable/slotachine"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="72dp" />

    <ImageButton
        android:id="@+id/imgGirarMoneda"
        android:layout_width="87dp"
        android:layout_height="92dp"
        android:layout_gravity="bottom|center_horizontal"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/boton_girar_moneda"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="209dp" />

    <ImageButton
        android:id="@+id/imgJugadores"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/boton_jugadores"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="229dp" />

    <ImageButton
        android:id="@+id/btnChat"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"

        android:src="@drawable/boton_chat"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="229dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

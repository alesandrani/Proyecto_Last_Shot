<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2F7EC"
    android:orientation="vertical"
    tools:context=".CrearSalaUnirse">

    <!-- Bot贸n de retroceso -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="51dp"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        android:clickable="true"
        android:contentDescription="Bot贸n de retroceso"
        android:focusable="true"
        android:src="@mipmap/button_back" />

    <!-- Logo centrado -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="233dp"
        android:layout_height="234dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:contentDescription="Logo de la app"
        android:src="@mipmap/image_logo_app" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D2F7EC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Bot贸n CREAR SALA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yellow"
                android:padding="20dp"
                android:orientation="horizontal"
                android:elevation="4dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CREAR SALA"
                    android:fontFamily="@font/jersey_10"
                    android:textSize="34sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnCrearSala"
                    android:layout_width="34dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/button_next" />
            </LinearLayout>

            <!-- Bot贸n UNIRSE A SALA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yellow"
                android:padding="20dp"
                android:orientation="horizontal"
                android:elevation="4dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="UNIRSE A SALA"
                    android:fontFamily="@font/jersey_10"
                    android:textColor="#000000"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnUnirseSala"
                    android:layout_width="31dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/button_next" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

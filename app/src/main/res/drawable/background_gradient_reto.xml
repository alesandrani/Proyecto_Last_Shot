<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo degradado radial oscuro (sin esquinas redondeadas) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1000"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#001F3F"
                android:endColor="#000000" />
        </shape>
    </item>

    <!-- Overlay de brillo sutil -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#22FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90"/>
        </shape>
    </item>

</layer-list>

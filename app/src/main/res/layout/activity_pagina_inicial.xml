<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#D2F7EC"
        android:paddingTop="33dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <!-- Botón de Menú -->

            <!-- Logo -->

            <!-- Botón con Imagen y Texto -->

            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/button_menu" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="294dp"
                android:layout_height="267dp"
                android:layout_marginTop="76dp"
                android:scaleType="fitXY"
                android:src="@mipmap/image_logo_app" />

            <LinearLayout
                android:id="@+id/boton"
                android:layout_width="394dp"
                android:layout_height="84dp"
                android:layout_marginTop="116dp"
                android:background="@drawable/s000000sw2cr30bff69b4"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Imagen dentro del botón -->
                <ImageView
                    android:id="@+id/cerveza"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/beer" />

                <!-- Texto dentro del botón -->
                <TextView
                    android:id="@+id/texto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="A BEBER"
                    android:textColor="#FFE135"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
